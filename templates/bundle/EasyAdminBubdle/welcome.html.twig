{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %} Tableau de bord  {% endblock %}

{% block content %}
    <div class="content">

        <div class="container">
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
        
                <li class="breadcrumb-item active">{{ app.user.username }} </li>
            </ol>
            <!-- Icon Cards-->
        </div>

        <div class="container">
            <div class="row">
                <h1> Tableau de bord </h1>
            </div>
            <div class="row mt-3">
             <div class="col-6 alert-success">
                    <span class="display-3"> {{ countUser['value'] }} </span> Utilisateurs
                </div>
                <div class="col-6 alert-dark">
                    <span class="display-3"> {{ countProduct['value'] }} </span> Produits
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-12">
                   <span class="display-3"> {{ countService['value'] }} </span> Services
                    
           </div>
    </div>
{% endblock content %}